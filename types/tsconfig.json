{
  "compilerOptions": {
    "baseUrl": "../",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "es2016", "esnext.asynciterable"],
    "module": "commonjs",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "es5",
    "types": [],
    "paths": {
      "astroturf": ["./types/index.d.ts"],
      "astroturf/helpers": ["./types/helpers.d.ts"]
    }
  },
  "include": ["./types/**/*.ts", "./types/**/*.tsx"],
  "exclude": ["node_modules"]
}
